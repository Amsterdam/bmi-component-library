{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"types": ["jest", "node"],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"downlevelIteration": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": false,
		"noEmit": false,
		"jsx": "react-jsx",
		"noImplicitAny": true,
		"typeRoots": ["node_modules/@types", "/types"],
		"baseUrl": ".",
		"paths": {
			"~/tests/*": ["tests/*"],
			"@mui/styled-engine": ["./node_modules/@mui/styled-engine-sc"]
		},
		"rootDir": "./",
		"outDir": "./lib",
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true
	},
	"files": [
		"src/index.ts",
		"node_modules/jest-fetch-mock/types/index.d.ts"
	],
	"include": ["src/**/*.ts", "src/**/*.tsx", "tests/jest-setup.ts"],
	"exclude": ["build/**/*", "node_modules"]
}
